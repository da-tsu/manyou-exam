<h1>USERS INDEX</h1>
<%= link_to "Create New Admin User", new_admin_user_path,class:"btn btn-primary btn-lg" %>
<ul class="media-list">
  <% @users.each do |user| %>
    <li class="media">
      <h4 class="media-left" style="color: blue;">
        ID:<%= user.id %>
        <% if user.admin? %> 
          <span class="badge">ADM</span>
        <% end %>
      </h4>
      <div class="media-body">
        <h4 class="media-heading">Name:<%= user.name %></h4>
        Registerd: <%= user.created_at %> 
          <div id = "detail"> 
            <%= link_to "Detail",admin_user_path(user.id),class:'btn btn-info btn-xs' %>
          </div>
          <div id = "Edit"> 
            <%= link_to "Edit",edit_admin_user_path(user.id),class:'btn btn-info btn-xs' %>
          </div>
          <div id = "destroy">
            <%= link_to "Destroy", admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除してよろしいですか？' },class:'btn btn-info btn-xs' %>
          </div>
          タスク投稿数: <%= user.task.size %>
      </div>
    </li>
  <% end %> 
</ul>